<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <!-- Google Material Icons -->
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <!-- Compiled Bootstrap CSS -->
   <link href="public/css/custom.css" rel="stylesheet">
   <!-- Custom CSS -->
   <link rel="stylesheet" href="public/css/main.css">
   <script src="public/js/main.js" defer></script>
   
   <title>Pothos</title>
   <link rel="icon" href="PlantPhotos/pothosLogo.png">

</head>

<body class="main-layout bg-secondary">
    

    <nav id="navbar" class="d-flex justify-content-between align-items-center bg-primary" data-aos="fade-in">
            
        <a href="/"> <img class="" style="width: 175px" src="PlantPhotos/pothosHomepageLogo.png"></a>
        <h3 class="text-success">Welcome Admin!</h3> 
        <!-- <div id="logo"><a>POTHOS</a></div> -->
        <ul class="nav pt-4">
            <li id="adminAddBtn" class="nav-item"><a class="nav-link nav-link-active">add</a></li>
            <li id="adminEditBtn" class="nav-item"><a class="nav-link link-light">edit</a></li>
            <li id="adminPreviewBtn" class="nav-item"><a class="nav-link link-light">preview</a></li>
        </ul>
    </nav>

<section id="adminAddSection">
    <div class="d-flex justify-content-center m-3">
        <form id="adminForm" class="w-50 d-flex flex-column" action="/admin/addPlant" method="POST">
            <div class="mb-3 input-group border border-2 border-dark rounded">
                <span class="input-group-text bg-success text-dark" id="inputGroup-sizing-default">Common Name</span>
                <input type="text" name="commonName" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="mb-3 input-group border border-2 border-dark rounded">
                <span class="input-group-text bg-success text-dark" id="inputGroup-sizing-default">Scientific Name</span>
                <input type="text" name="scientificName" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="mb-3 input-group border border-2 border-dark rounded">
                <span class="input-group-text bg-success text-dark" id="inputGroup-sizing-default">Description</span>
                <input type="text" name="description" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="d-flex">
                <div class="mb-3 input-group border border-2 border-dark rounded w-50">
                    <span class="input-group-text bg-success text-dark" id="inputGroup-sizing-default">Price</span>
                    <input type="number" name="price" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                <div class="mb-3 input-group border border-2 border-dark rounded w-50">
                    <span class="input-group-text bg-success text-dark" id="inputGroup-sizing-default">Quantity</span>
                    <input type="number" name="quantity" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
            </div>
            <button type="submit" class="btn btn-success border-dark align-self-center">Add to Database</button>
        </form>
    </div>
</section>
        
        

<section id="adminEditSection" style="display: none;">

        <table class="table table-secondary table-striped">
            <thead>
              <tr>
                <th class="w-25" scope="col">Plant Name</th>
                <th class="w-25" scope="col">Scientific Name</th>
                <th class="w-25" scope="col">Description</th>
                <th  scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th class="text-end" scope="col">Pages/Actions</th>
              </tr>
            </thead>
            <tbody>
                
                <% plants.forEach( el => { %>
                    <tr>
                        <td id="commonName" contenteditable="false"><%= el.commonName %></td>
                        <td id="scientificName" contenteditable="false"><%= el.scientificName %></td>
                        <td id="description" contenteditable="false"><%= el.description %></td>
                        <td id="price" contenteditable="false"><%= el.price %></td>
                        <td id="quantity" contenteditable="false"><%= el.quantity %></td>
                        <td class="text-end">
                            <span title="shop page" class="material-symbols-outlined">shopping_bag</span>
                            <span title="care page" class="material-symbols-outlined">spa</span>
                            <span data-id='<%=el._id%>' title="edit" class="adminEdit material-symbols-outlined">edit_note</span>
                            <span data-id='<%=el._id%>' title="delete" class="adminDelete material-symbols-outlined">delete</span>
                        </td>
                        
                    </tr>
                <% }) %>
              
            </tbody>
          </table>
</section>
  
    <!-- AOS javascript -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>   
</body>
</html>