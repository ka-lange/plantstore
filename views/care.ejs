<!doctype html>
<html lang="en" id="carePage">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- AOS CSS -->
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        
        <!-- Compiled Bootstrap CSS -->
        <link href="/public/css/custom.css" rel="stylesheet">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/public/css/main.css">
        
        <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
        <title>Houseplant Care - Pothos</title>
        <link rel="icon" href="PlantPhotos/pothosLogo.png?">
        <meta name="description" content="Continued plant care and customer support"/>
        <meta name="keywords" content="houseplant, plant, care, growing, watering, monstera, plant safety, light requirement">
        <script src="/public/js/main.js" defer></script>
       
        
    </head>

<body class="main-layout">
    <nav class="navbar navbar-expand-md bg-primary py-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img class="" style="width: 175px" src="/PlantPhotos/pothosHomepageLogo.png" alt="Pothos plant store logo" ></a>
            <button class="navbar-toggler bg-success mt-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" collapse navbar-collapse mt-3" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/about">About</a></li>
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link nav-link-active fs-4" href="/care">Care</a></li>
                    <li class="nav-item" ><a class="nav-link" href="/cart"><i class="bi bi-cart2 bi-small text-success"></i></a></li> 
                </ul>
            </div>
        </div>
    </nav>

    <main class="bg-secondary">
        <div class="container-fluid">
            <div class="row d-flex">
                <div class="col-lg-2 col-md-3 bg-success overflow-y-auto pt-4 px-0">
                    <nav class="navbar navbar-expand-md">
                        <div class="container-fluid d-flex flex-column px-0">
                          
                            <button class=" border-0 bg-success" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <h3 class="h-accent">Find Your Plant</h3>
                                <span class="bi bi-search-heart fs-1"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav d-flex flex-column">
                                        <% plants.forEach( el => { %>
                                            <li class="nav-item" data-id='<%= el._id %>'>
                                                <% if (thisPlant) { %>
                                                    <li class="nav-item border-bottom py-2"><a class="nav-link link-dark h-accent" href="./<%= el._id %>" style="font-size: 1rem;"><%= el.commonName %></a></li>
                                                <% } else { %>
                                                    <li class="nav-item border-bottom py-2"><a class="nav-link link-dark h-accent" href="/care/<%= el._id %>" style="font-size: 1rem;"><%= el.commonName %></a></li>
                                                <% } %>
                                            </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </div>
                      </nav>
              
                </div>
          
            <div class="col-lg-10 col-md-9 text-center px-3" >
                <% if(thisPlant) { %>
                   <div class="py-5">
                    <h1 class="h-accent"><%= thisPlant.commonName %></h1>
                    <h4 class="fst-italic"><%= thisPlant.scientificName %></h4>
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-12 col-lg-6 d-flex justify-content-center align-items-center">
                            <img class="circle-img-lg p-3" src="/<%= thisPlant.img %>">
                        </div>
                        <div class="col p-4">
                            
                            <p class="text-start fs-5 pb-3"><%= thisPlant.description %></p>
                            <div class="d-flex flex-column align-items-start border border-2 border-primary rounded p-2">
                                <div class="d-flex align-items-center border-bottom border-primary py-2">
                                    <i class="bi bi-droplet fs-1"></i>
                                    <p class="text-start pt-2"><%= thisPlant.waterNotes %></p>
                                </div>
                                
                                <div class="d-flex align-items-center border-bottom border-primary py-2">
                                    <i class="bi bi-brightness-high fs-1"></i>
                                    <p class="text-start pt-2"><%= thisPlant.lightNotes %></p>
                                </div>
                                    
                                <div class="d-flex align-items-center py-2">
                                    <span class="material-symbols-outlined fs-1 p-2">skull</span>
                                    <p class="text-start pt-2"><%= thisPlant.toxicityNotes %></p>       
                                </div>               
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                      
                        <a href="/shop"><button class="m-3 btn btn-success border-2 border-dark">Visit the Shop</button></a>
                    </div>
                </div>
                <% } else { %> 
                    <div class="m-auto text-start py-5" >
                        <div class="row align-items-center pb-5">
                            <div class="col-12 col-lg-6">
                                <h1 class="h-accent">We're Here to Help!</h1>
                                <p class="fs-5 py-4">At Pothos, our job is not done when your lush, green vines make it home. We are committed to offer continued support with care and advice if something goes wrong!</p>
                                <p class="fs-5 pb-4">Find your plant from the menu to view species-specific care guidelines and reccomendations</p>
                            </div>
                            <div class="col-12 col-lg-6">
                                <img class="img-fluid border border-5 border-light rounded" src="/PlantPhotos/how-to-grow-and-care-for-a-monstera-0922-2000-d548d59535844eea8bf1d94441879560.jpg" alt="monstera houseplant being sprayed with water">
                            </div>
                            
                        </div>
                        <hr class=>
                        <div class="row pt-5 text-center">
                            <div class="col">
                                <h3 class="h-accent">Don't see your plant? No worries!</h3>
                                <p class="fs-5 py-3">Even if we haven't sold your plant in our stores, our experts can help if you send them a chat.</p>
                                <form class=>
                                    <div class="input-group mb-3 m-auto" style="max-width: 600px">
                                        <input type="text" class="form-control bg-light" placeholder="Email Address" aria-label="Email Address" aria-describedby="button-subscribe">
                                    </div>
                                    <div class="input-group mb-3 m-auto" style="max-width: 600px">
                                        <textarea type="text" class="form-control bg-light" placeholder="Message" aria-label="Email Address" aria-describedby="button-subscribe"></textarea>
                                    </div>
                                    <button class="btn btn-success border-2 border-dark m-3" type="button" id="button-subscribe">Send Message</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %> 
            </div>
          
            </div>
        </div>
    </main>

    
<!-- footer -->
<footer class="container-fluid bg-primary">
    <div class="row p-3">
        <ul class="nav pt-4 d-flex justify-content-center">
            <li class="nav-item"><a class="nav-link link-secondary" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link link-secondary " href="/about">About</a></li>
            <li class="nav-item"><a class="nav-link link-secondary " href="/shop">Shop</a></li>
            <li class="nav-item"><a class="nav-link nav-link-active  " href="/care">Care</a></li>
            <!-- <li class="nav-item"><a href="/reference" class="nav-link link-secondary">Reference</a></li> -->
            <li class="nav-item"><a href="/admin" class="nav-link link-secondary">Admin</a></li>
        </ul>
    </div>
    <div class="">
        <ul class="list-unstyled d-flex justify-content-center">
            <li class=""><a href="#"><i class="bi bi-small bi-facebook text-success"></i></a></li>
            <li class="mx-4"><a href="#"><i class="bi bi-small bi-instagram text-success"></i></a></li>
            <li class=""><a href="#"><i class="bi bi-small bi-twitter text-success"></i></a></li>
        </ul>
    </div>
    <hr class="text-secondary">
       
            <form class="container p-2 text-success">
                <h3 class="text-center pb-4">Subscribe to our Newsletter</h3>
                <!-- <p>for exciting bi-wekly updates, deals, and plant care tips</p> -->
                <div class="row d-flex justify-content-center" >
                    <div class="col-12 col-md-6">
                        <input type="text" class="form-control bg-light rounded p-2 my-2 text-center" placeholder="Email Address" aria-label="Email Address" aria-describedby="button-subscribe">
                    </div>
                    <button class="btn btn-success btn-sm col-12 col-md-4 my-2 mx-3 bg-success rounded text-dark text-center ">Subscribe</button>
                </div>
            </form>
    
        
        <div class="pt-4 d-flex flex-column justify-content-center  align-items-center">
            <!-- <p class="text-center text-light">Made By Karissa Lange</p> -->
            <img class="pb-2" style="width: 3rem" src="/PlantPhotos/pothosLogo.png" alt="Pothos plant store logo">
            <p class="text-center text-light">© 2023 Pothos, Inc. All rights reserved.</p>
        </div>
    </footer>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>    
    
    <!-- AOS javascript -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>   
</body>
</html>