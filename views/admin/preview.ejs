<!doctype html>
<html lang="en" >
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <!-- Google Material Icons -->
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <!-- Compiled Bootstrap CSS -->
   <link href="../public/css/custom.css" rel="stylesheet">
   <!-- Custom CSS -->
   <link rel="stylesheet" href="../public/css/main.css">
   <script src="../public/js/main.js" defer></script>
   
   <title>Pothos</title>
   <link rel="icon" href="PlantPhotos/pothosLogo.png">

</head>

<body class="main-layout bg-secondary">
    

    <nav id="navbar" class="d-flex justify-content-between align-items-center bg-primary" data-aos="fade-in">
            
        <a href="/"> <img class="" style="width: 175px" src="../PlantPhotos/pothosHomepageLogo.png"></a>
        
        <!-- <div id="logo"><a>POTHOS</a></div> -->
        <ul class="nav pt-4">
            <li id="adminAddBtn" class="nav-item"><a href="/admin" class="nav-link link-success">back to admin home</a></li>
        </ul>
    </nav>

    <main class="bg-secondary">
        
        <div class="container-fluid">
            <!-- make collapsible on small screen -->
            <div class="row d-flex">
                <div class="col-lg-2 col-md-3 bg-secondary border-end border-3 border-primary overflow-y-auto pt-4 ">
                    <nav class="navbar navbar-expand-md">
                        <div class="container-fluid d-flex flex-column">
                            <button class=" border-0 bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <h3>Choose Plant</h3>
                                <span class="bi bi-arrow-down-short fs-1"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav d-flex flex-column">
                                    <% plants.forEach( el => { %>
                                        <li onclick="choosePlantFromCare('<%= el._id %>'), getShopSheet('<%= el._id %>')" class="nav-item border-bottom border-primary" data-id='<%= el._id %>'>
                                            <div class="nav-link text-dark fs-5" aria-current="page"><%= el.commonName %></div>
                                            <!-- <a href="care/<%= el._id %>" ><button><%= el.commonName %></button></a> -->
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                      </nav>
              
                </div>
          
            <div class="col-lg-10 col-md-9 text-center px-5" >
                
                
                <section id="plantCareSheet" style="display: none;">
                    <h1 id="commonName"></h1>
                    <h1 id="scientificName"></h1>
                    <div class="row">
                        <div class="col">
                            <img class="img-fluid" src="/PlantPhotos/marble-pothos.jpeg">
                        </div>
                        <div class="col">
                            <!-- <h4>title</h4> -->
                            <p id="description" class="text-start"></p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <h3 id="price" class="m-3"></h3>
                        <i class="bi fs-1 bi-cart-plus text-success"></i>
                    </div>
                    <hr>
                </section>
                
                <section id="plantShopSheet" style="display: none;">
                    
                        <div class="col p-2 d-flex justify-content-center">
                            <div class="rounded-5 bg-white " style="width: 18rem;">
                                <div class="border border-1 border-bottom-0 rounded-top-5 border-primary">
                                    <div class="d-flex justify-content-between m-2">
                                        <h4 id="shopCommonName" class="text-primary m-3">name</h4>
                                        <a ><i  class="bi bi-info-circle-fill fs-2 text-success"></i></a>
                                    </div>
                                    <img src="/PlantPhotos/global-pothos.webp" class="img-fluid" alt="...">
                                </div>
                                
                                <div class="container rounded-bottom-5 bg-primary d-flex justify-content-between align-items-center py-2">
                                    <div>
                                        <p id="shopPrice" class="text-light fs-4 m-3">$</p>
                                    </div>
                                    <i class="bi fs-1 bi-cart-plus text-success"></i>
                                </div>
                            </div>
                        </div>
                       
                </section>
                
            </div>
          
            </div>
          </div>
        
        
    </main>

        
     <!-- Bootstrap Bundle with Popper -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>    
    
  
    <!-- AOS javascript -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>   
</body>
</html>