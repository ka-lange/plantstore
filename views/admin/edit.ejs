<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <!-- Google Material Icons -->
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <!-- Compiled Bootstrap CSS -->
   <link href="../public/css/custom.css" rel="stylesheet">
   <!-- Custom CSS -->
   <link rel="stylesheet" href="../public/css/main.css">
   <script src="../public/js/main.js" defer></script>
   
   <title>Pothos</title>
   <link rel="icon" href="PlantPhotos/pothosLogo.png">

</head>

<body class="main-layout bg-secondary">
    

    <nav id="navbar" class="d-flex justify-content-between align-items-center bg-primary" data-aos="fade-in">
            
        <a href="/"> <img class="" style="width: 175px" src="../PlantPhotos/pothosHomepageLogo.png"></a>
        <h3 class="text-success">Welcome Admin!</h3> 
        <!-- <div id="logo"><a>POTHOS</a></div> -->
        <ul class="nav pt-4">
            <li id="adminAddBtn" class="nav-item"><a href="/admin" class="nav-link link-success">back to admin home</a></li>
        </ul>
    </nav>

<section id="adminEditSection">

        <table class="table table-secondary table-striped">
            <thead>
              <tr>
                <th class="w-25" scope="col">Plant Name</th>
                <th class="w-25" scope="col">Scientific Name</th>
                <th class="w-25" scope="col">Description</th>
                <th  scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th class="text-end" scope="col">Pages/Actions</th>
              </tr>
            </thead>
            <tbody>
                
                <% plants.forEach( el => { %>
                    <tr>
                        <td id="commonName" contenteditable="false"><%= el.commonName %></td>
                        <td id="scientificName" contenteditable="false"><%= el.scientificName %></td>
                        <td id="description" contenteditable="false"><%= el.description %></td>
                        <td id="price" contenteditable="false"><%= el.price %></td>
                        <td id="quantity" contenteditable="false"><%= el.quantity %></td>
                        <td class="text-end">
                            <span title="shop page" class="material-symbols-outlined">shopping_bag</span>
                            <span title="care page" class="material-symbols-outlined">spa</span>
                            <span data-id='<%=el._id%>' title="edit" class="adminEdit material-symbols-outlined">edit_note</span>
                            <span data-id='<%=el._id%>' title="delete" class="adminDelete material-symbols-outlined">delete</span>
                        </td>
                        
                    </tr>
                <% }) %>
              
            </tbody>
          </table>
</section>
  
    <!-- AOS javascript -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>   
</body>
</html>