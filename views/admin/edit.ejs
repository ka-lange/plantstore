<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <!-- Google Material Icons -->
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <!-- Compiled Bootstrap CSS -->
   <link href="../public/css/custom.css" rel="stylesheet">
   <!-- Custom CSS -->
   <link rel="stylesheet" href="../public/css/main.css">
   <script src="../public/js/main.js" defer></script>
   
   <title>Pothos</title>
   <link rel="icon" href="PlantPhotos/pothosLogo.png">

</head>

<body class="main-layout bg-secondary">
    

    <nav id="navbar" class="d-flex flex-column flex-md-row justify-content-between align-items-center bg-primary" data-aos="fade-in">
            
        <a href="/"> <img class="" style="width: 175px" src="../PlantPhotos/pothosHomepageLogo.png"></a>
        <li id="adminAddBtn" class="nav-item"><a href="/admin" class="nav-link link-success">back to admin home</a></li>

    </nav>

<main id="activeSection" class="pt-5 m-2">
    <p class="text-center fs-4 text-primary h-accent">Active Plants</p>
    <hr class="w-50 m-auto">
    <div class="overflow-x-scroll pb-0">
        <table class=" table table-secondary m-0">
            <thead>
              <tr>
                <th scope="col">Plant Names</th>
                <th class="w-25" scope="col">Description</th>
                <th class="w-50" scope="col">Requirements</th>
                <th class="text-end" scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                
                <% plants.forEach( el => { %>
                    <% if(el.active == true){ %>
                    <tr id="table-<%=el._id%>">
                        <td id="names" contenteditable="false">
                            <table class="table table-secondary">
                                <tr>
                                  <td>Common:</td>
                                  <td id="commonName-<%=el._id%>"><%= el.commonName %></td>
                                </tr>
                                <tr>
                                    <td>Scientific:</td>
                                    <td id="scientificName-<%=el._id%>"><%= el.scientificName %></td>
                                </tr>
                                <tr>
                                    <td>Type:</td>
                                    <td id="type-<%=el._id%>" id="type"><%= el.type %></td>
                                </tr>
                                <tr>
                                    <td>Img Link:</td>
                                    <td id="img-<%=el._id%>" id="type"><%= el.img %></td>
                                </tr>
                                <tr>
                                    <td>Price</td>
                                    <td id="price-<%=el._id%>" id="type"><%= el.price %></td>
                                </tr>
                              </table>
                        </td>
                        <td id="description-<%=el._id%>" contenteditable="false"><%= el.description %></td>
                        
                        <td id="requirements" contenteditable="false">
                            
                                <table class="table table-secondary table-bordered">
                                  <tr>
                                    <td style="width: 10%"><i class="bi bi-droplet fs-5"></i></td>
                                    <td id="waterReq-<%=el._id%>" class="w-25"><%= el.waterReq %></td>
                                    <td id="waterNotes-<%=el._id%>" class="w-50"><%= el.waterNotes %></td>
                                  </tr>
                                  <tr>
                                    <td><i class="bi bi-sun fs-5"></td>
                                    <td id="lightReq-<%=el._id%>"><%= el.lightReq %></td>
                                    <td id="lightNotes-<%=el._id%>"><%= el.lightNotes %></td>
                                  </tr>
                                  <tr>
                                    <td><i class="bi bi-radioactive fs-5"></td>
                                    <td id="toxicity-<%=el._id%>"><%= el.toxicity %></td>
                                    <td id="toxicityNotes-<%=el._id%>"><%= el.toxicityNotes %></td>
                                  </tr>
                                </table>
                        </td>
                        <td class="text-end">
                            <i onclick="adminEdit('<%=el._id%>')" id="editBtn-<%=el._id%>" data-id='<%=el._id%>' title="edit" class="bi bi-pencil-square fs-5"></i>
                            <i onclick="adminDelete('<%=el._id%>')" data-id='<%=el._id%>' title="edit" class="bi bi-trash3 fs-5"></i>
                            <% if(el.featured == true){ %> 
                                <i onclick="adminRemoveFeatured('<%=el._id%>')" data-id='<%=el._id%>' title="featured" class="bi bi-star-fill fs-5"></i>
                            <% } %>
                            <% if(el.featured == false){ %> 
                                <i onclick="adminSetFeatured('<%=el._id%>')" data-id='<%=el._id%>' title="not featured" class="bi bi-star fs-5"></i>
                             <% } %>
                            <i onclick="adminSetInActive('<%=el._id%>')" data-id='<%=el._id%>' title="active" class="bi bi-circle-fill text-primary fs-5"></i>

                        </td>
                    </tr>
                    <% } %>
                <% }) %>
              
            </tbody>
          </table>
    </div>
        
</main>

<main id="inactiveSection" class="py-5 m-2">
    <p class="text-center fs-4 text-primary h-accent">Inactive Plants</p>
    <hr class="w-50 m-auto">
    <div class="overflow-x-scroll">
        <table class=" table table-secondary m-0">
            <thead>
              <tr>
                <th scope="col">Plant Names</th>
                <th class="" scope="col">Description</th>
                
                <th class="w-50" scope="col">Requirements</th>
                <th class="text-end" scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                
                <% plants.forEach( el => { %>
                    <% if(el.active !== true){ %>
                    <tr id="table-<%=el._id%>">
                        <td id="names" contenteditable="false">
                            <table class="table table-secondary">
                                <tr>
                                  <td>Common:</td>
                                  <td id="commonName-<%=el._id%>"><%= el.commonName %></td>
                                </tr>
                                <tr>
                                    <td>Scientific:</td>
                                    <td id="scientificName-<%=el._id%>"><%= el.scientificName %></td>
                                </tr>
                                <tr>
                                    <td>Type:</td>
                                    <td id="type-<%=el._id%>" id="type"><%= el.type %></td>
                                </tr>
                                <tr>
                                    <td>Img Link:</td>
                                    <td id="img-<%=el._id%>" id="type"><%= el.img %></td>
                                </tr>
                                <tr>
                                    <td>Price</td>
                                    <td id="price-<%=el._id%>" id="type"><%= el.price %></td>
                                </tr>
                              </table>
                        </td>
                        <td id="description-<%=el._id%>" contenteditable="false"><%= el.description %></td>
                        
                        <td id="requirements" contenteditable="false">
                            
                                <table class="table table-secondary table-bordered">
                                  <tr>
                                    <td style="width: 10%"><i class="bi bi-droplet fs-5"></i></td>
                                    <td id="waterReq-<%=el._id%>" class="w-25"><%= el.waterReq %></td>
                                    <td id="waterNotes-<%=el._id%>" class="w-50"><%= el.waterNotes %></td>
                                  </tr>
                                  <tr>
                                    <td><i class="bi bi-sun fs-5"></td>
                                    <td id="lightReq-<%=el._id%>"><%= el.lightReq %></td>
                                    <td id="lightNotes-<%=el._id%>"><%= el.lightNotes %></td>
                                  </tr>
                                  <tr>
                                    <td><i class="bi bi-radioactive fs-5"></td>
                                    <td id="toxicity-<%=el._id%>"><%= el.toxicity %></td>
                                    <td id="toxicityNotes-<%=el._id%>"><%= el.toxicityNotes %></td>
                                  </tr>
                                </table>
                        </td>
                        <td class="text-end">
                            <i onclick="adminEdit('<%=el._id%>')" id="editBtn-<%=el._id%>" data-id='<%=el._id%>' title="edit" class="bi bi-pencil-square fs-5"></i>
                            <i onclick="adminDelete('<%=el._id%>')" data-id='<%=el._id%>' title="delete" class="bi bi-trash3 fs-5"></i>
                            <% if(el.featured == true){ %> 
                                <i onclick="adminRemoveFeatured('<%=el._id%>')" data-id='<%=el._id%>' title="featured" class="bi bi-star-fill fs-5"></i>
                            <% } %>
                            <% if(el.featured == false){ %> 
                                <i onclick="adminSetFeatured('<%=el._id%>')" data-id='<%=el._id%>' title="not featured" class="bi bi-star fs-5"></i>
                             <% } %>                            
                             <i onclick="adminSetActive('<%=el._id%>')" data-id='<%=el._id%>' title="inactive" class="bi bi-circle-fill text-danger fs-5"></i>

                        </td>
                    </tr>
                    <% } %>
                <% }) %>
              
            </tbody>
          </table>
        </div>
    </main>
