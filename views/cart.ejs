<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <!-- Compiled Bootstrap CSS -->
    <link href="public/css/custom.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="public/css/main.css">
    
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">    
    <title>Pothos</title>
    <link rel="icon" href="PlantPhotos/pothosLogo.png?" type="image/x-icon">

    <script src="public/js/main.js" defer></script>
</head>

<body onload = "getTotal()" class="main-layout bg-secondary">
    <nav class="navbar navbar-expand-md bg-primary py-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img class="" style="width: 175px" src="PlantPhotos/pothosHomepageLogo.png"></a>
            <button class="navbar-toggler bg-success mt-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" collapse navbar-collapse mt-3" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/about">About</a></li>
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link link-secondary fs-4" href="/care">Care</a></li>
                    <li class="nav-item" ><a class="nav-link" href="/cart"><i class="bi bi-cart2 bi-small text-success"></i></a></li> 
                </ul>
            </div>
        </div>
    </nav>

    <main class="h-100 py-5">
        <div class="container py-2 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
              <div class="card">
                <div class="card-body p-4">
      
                  <div class="row">
      
                    <div class="col-lg-7">
                      <!-- change this to be flex - i hate it -->
                        <p class="mb-3 fs-5">
                            <i class="bi bi-arrow-left-short fs-2 px-0"></i>
                            <a href="/shop" class="h-accent">Continue Shopping</a>
                        </p>
                      <hr>
      
                      <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                          <p class="mb-1">Shopping cart</p>
                          <!-- add ejs to update count of items-->
                        </div>
                      </div>
      <!-- One card where there should be an EJS Loop -->
            <% plants.forEach( el => { %>
                <% if(el.inCart == true){ %>
                    <div class="card mb-3">
                        <div class="card-body">
                        <div class="row d-flex align-items-between">
                            <div class="col-12 col-md-8 d-flex align-items-center">
                                <div>
                                    <img src="/<%= el.img %>" class="img-fluid rounded-3 border border-success" alt="Shopping item" style="width: 65px;">
                                </div>
                                <div class="ms-1">
                                    <p class="h-accent pt-3"><%= el.commonName %></p>
                                </div>
                            </div>
                            <div class="mt-3 col-12 col-md-4 d-flex align-items-center justify-content-between justify-content-md-end">
                                <div class="d-flex pt-2">
                                    <h5>$</h5>
                                    <p class="mb-0 itemPrice"><%= el.price %>.00</p>
                                </div>
                                <i onclick="removeFromCart('<%= el._id %>')" class="bi bi-trash fs-5"></i>
                            </div>
                        </div>
                        </div>
                    </div>
                <% }; %>
            <% }) %> 
                    </div>
                    <div class="col-lg-5">
      
                      <div class="card bg-primary text-white rounded-3">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0">Card details</h5>
                            <img src="/PlantPhotos/pothosLogo.png"
                              class="img-fluid" style="width: 45px;" alt="Avatar">
                          </div>
      
                          <!-- <p class="small mb-2">Card type</p>
                          <a href="#!" type="submit" class="text-white"><i
                              class="fab fa-cc-mastercard fa-2x me-2"></i></a>
                          <a href="#!" type="submit" class="text-white"><i
                              class="fab fa-cc-visa fa-2x me-2"></i></a>
                          <a href="#!" type="submit" class="text-white"><i
                              class="fab fa-cc-amex fa-2x me-2"></i></a>
                          <a href="#!" type="submit" class="text-white"><i class="fab fa-cc-paypal fa-2x"></i></a> -->
      
                          <form class="mt-4">
                            <div class="form-outline form-white mb-4">
                              <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                placeholder="Cardholder's Name" />
                              <label class="form-label" for="typeName">Cardholder's Name</label>
                            </div>
      
                            <div class="form-outline form-white mb-4">
                              <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                placeholder="1234 5678 9012 3457" minlength="19" maxlength="19" />
                              <label class="form-label" for="typeText">Card Number</label>
                            </div>
      
                            <div class="row mb-4">
                              <div class="col-md-6">
                                <div class="form-outline form-white">
                                  <input type="text" id="typeExp" class="form-control form-control-lg"
                                    placeholder="MM/YYYY" size="7" id="exp" minlength="7" maxlength="7" />
                                  <label class="form-label" for="typeExp">Expiration</label>
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-outline form-white">
                                  <input type="password" id="typeText" class="form-control form-control-lg"
                                    placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                  <label class="form-label" for="typeText">Cvv</label>
                                </div>
                              </div>
                            </div>
      
                          </form>
      
                          <hr class="my-4">
      
                          <div class="d-flex justify-content-between">
                            <p class="mb-2">Subtotal</p>
                           
                            
                            
                            <p class="mb-2 totalPrice">$0.00</p>
                          </div>
      
                          <div class="d-flex justify-content-between">
                            <p class="mb-2">Shipping</p>
                            <p class="mb-2">FREE!</p>
                          </div>
      
                          <div class="d-flex justify-content-between mb-4">
                            <p class="mb-2">Total(+ taxes)</p>
                            <p class="mb-2 totalPrice">$0.00</p>
                          </div>
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-success btn-lg">
                                Checkout<i class="bi bi-arrow-right fs-5"></i>
                            </button>
                        </div>
                          
      
                        </div>
                      </div>
      
                    </div>
      
                  </div>
      
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>
    
<!-- footer -->
    <footer class="container-fluid bg-primary">
        <div class="row p-3">
            <ul class="nav pt-4 d-flex justify-content-center">
                <li class="nav-item"><a class="nav-link link-secondary" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link link-secondary " href="/about">About</a></li>
                <li class="nav-item"><a class="nav-link link-secondary " href="/shop">Shop</a></li>
                <li class="nav-item"><a class="nav-link link-secondary " href="/care">Care</a></li>
                <!-- <li class="nav-item"><a href="/reference" class="nav-link link-secondary">Reference</a></li> -->
                <li class="nav-item"><a href="/admin" class="nav-link link-secondary">Admin</a></li>
            </ul>
        </div>
        <div class="">
            <ul class="list-unstyled d-flex justify-content-center">
                <li class=""><a href="#"><i class="bi bi-small bi-facebook text-success"></i></a></li>
                <li class="mx-4"><a href="#"><i class="bi bi-small bi-instagram text-success"></i></a></li>
                <li class=""><a href="#"><i class="bi bi-small bi-twitter text-success"></i></a></li>
            </ul>
        </div>
        <hr class="text-secondary">
       
            <form class="container p-2 text-success">
                <h3 class="text-center pb-4">Subscribe to our Newsletter</h3>
                <!-- <p>for exciting bi-wekly updates, deals, and plant care tips</p> -->
                <div class="row mb-3 d-flex justify-content-center" >
                    <input type="text" class="col-12 col-md-4 form-control bg-light rounded p-2 text-center" placeholder="Email Address" aria-label="Email Address" aria-describedby="button-subscribe">
                    
                    <button class="btn btn-success col-12 col-md-4 my-3 bg-success rounded text-dark text-center ">Subscribe</button>
                </div>
            </form>
    
        
        <div class="pt-4 d-flex flex-column justify-content-center  align-items-center">
            <!-- <p class="text-center text-light">Made By Karissa Lange</p> -->
            <img class="pb-2" style="width: 3rem" src="PlantPhotos/pothosLogo.png" >
            <p class="text-center text-light">Â© 2023 Pothos, Inc. All rights reserved.</p>
        </div>
    </footer>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>    
    
    <!-- AOS javascript -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>   
</body>
</html>